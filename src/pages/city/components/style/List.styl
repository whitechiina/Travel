.border-topbottom
    &:before
        border-color #ccc
    &:after
        border-color #ccc
.border-bottom
    &:before
        border-color #ccc
.list
    position absolute
    top 1.56rem
    left 0
    right 0
    bottom 0
    overflow hidden
    .title
        line-height .4rem
        background #eee
        padding-left .2rem
        color #666
        font-size .20rem
    .button-list
        overflow hidden
        padding .1rem .6rem .1rem .1rem
        .button-wrapper
            float left
            width 33.33%
            .button
                text-align center
                margin .1rem
                border .02rem solid #ccc
                padding .1rem 0
                border-radius .06rem
    .item-list
        .item
            line-height .76rem
            padding-left .2rem