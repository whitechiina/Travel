.banner
    position relative
    overflow hidden
    height 0
    padding-bottom 55%
    .banner-img
        width 100%
    .banner-info
        display flex
        position absolute 
        left 0
        right 0
        bottom 0
        line-height .6rem
        color #fff
        background-image linear-gradient(top,rgba(0,0,0,0),rgba(0,0,0,0.8))
        .banner-title
            flex 1
            font-size .32rem
            padding 0 .2rem
        .banner-number
            height .38rem
            margin-top .1rem
            margin-right .2rem
            padding 0 .4rem
            font-size .24rem
            line-height .38rem
            heigh .4rem
            border-radius .2rem
            background rgba(0,0,0,.8)
            .banner-icon
                font-size .2rem