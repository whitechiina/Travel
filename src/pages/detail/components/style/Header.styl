@import '~@/assets/styles/varibles.styl'
.header-abs
    position absolute 
    left .2rem
    top .2rem
    width .8rem
    height .8rem
    border-radius .4rem
    text-align center
    line-height .8rem
    background rgba(0,0,0,.8)
    .header-abs-back
        color #fff
        font-size .4rem
.header-fixed
    z-index 2
    position fixed
    top 0
    left 0
    right 0
    height $headerHeight
    line-height $headerHeight
    text-align center
    color #fff
    background-color $bgColor
    font-size .32rem
    .header-fixed-back
        position absolute
        top 0
        left 0
        width .64rem
        font-size .4rem
        text-align center
        color #fff